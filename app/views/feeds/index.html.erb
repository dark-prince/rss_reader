<h1>Listing feeds</h1>

<table class="table table-hover" style="width:100%;">
  <thead>
    <tr>
      <th>Title</th>
      <th>URL</th>
      <th>Description</th>
      <th width="200">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.title %></td>
        <td><%= feed.url %></td>
        <td><%= feed.description %></td>
        <td>
          <%= link_to 'Show', feed, :class => 'btn btn-primary' %>
          <%= link_to 'Edit', edit_feed_path(feed), :class => 'btn btn-primary' %>
          <%= link_to 'Destroy', feed, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @feeds if @feeds.present? %>

<br /><%= link_to 'New Feed', new_feed_path, :class => 'btn btn-primary' %>